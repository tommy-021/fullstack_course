{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "plugins": ["@typescript-eslint", "react", "react-hooks", "@stylistic/eslint-plugin-js"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:@stylistic/eslint-plugin-js/recommended"
  ],
  "settings": { "react": { "version": "detect" } },
  "env": { "browser": true, "es2021": true, "node": true },
  "rules": {}
}
